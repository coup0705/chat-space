.wrapper

  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name 
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to new_group_path do
              = fa_icon "pencil-square-o"
          %li.side-header__box__menu__edit-user 
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'
    .groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
  .chat-main
    .main-header
      .main-header__left-box  
        %h2.main-header__left-box__current-group eeee
        %ul.main-header__left-box__member-list
          Menber:
          %li.main-header__left-box__member-list-menber  222
      = link_to "" do
        .main-header__edit-btn  Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker test-user
          %p.message__upper-info__date 2019/07/17
      %p.massege__text
    .form
      .input-box
        %input.input-box__text
        %label.input-box__image
          =fa_icon "image"
        %input.submit-btn(type="submit" name="commit"  value="Send")
  